{
	"name": "revuc-sveltekit-admin",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
    "encrypt": "dotenvx encrypt -f .env.development -f .env.production",
		"decrypt": "dotenvx decrypt -f .env.development -f .env.production",
		"dev": "dotenvx run -f .env.development -- vite dev",
		"build": "dotenvx run -f .env.production -- vite build",
		"preview": "dotenvx run -f .env.production -- vite build && wrangler dev",
		"db:gen": "drizzle-kit generate",
		"db:seed": "dotenvx run -f .env.development -- tsx ./src/lib/server/db/seed.ts",
		"db:migrate": "dotenvx run -f .env.development -- drizzle-kit migrate",
		"db:studio": "dotenvx run -f .env.development -- drizzle-kit studio",
		"db:migrate:prod": "dotenvx run -f .env.production -- drizzle-kit migrate",
		"db:studio:prod": "dotenvx run -f .env.production -- drizzle-kit studio"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.48.4",
		"@sveltejs/adapter-cloudflare": "^7.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"drizzle-kit": "^0.30.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"drizzle-orm": "^0.40.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
